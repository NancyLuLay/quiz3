<h1>Submit a new idea</h1>
<%= @idea.errors.full_messages.join(", ") %>
<%= form_for @idea do |f| %>

<div>
  <%= f.label :title%>
  <%= f.text_field :title %>
</div>

<div>
  <%= f.label :body%>
  <%= f.text_area :body %>
</div>

<div>
  <%= f.label :image %>
  <%= f.file_field :image %>
</div>


<%= f.submit %>

<% end %>
